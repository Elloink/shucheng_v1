<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAddressActivity"
    tools:ignore="HardcodedText,UselessParent" >
    
    <RelativeLayout 
        android:id="@+id/rl_address_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top"
        >
        <TextView 
            android:id="@+id/tv_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的地址管理"
            android:textSize="18sp"
            android:textColor="#ffffff"
            />
        <TextView 
            android:id="@+id/tv_address_newadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新建"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/tv_address_title"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
    
    <ListView 
        android:id="@+id/lv_address_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_address_title"
       
        ></ListView>

    

</RelativeLayout>
