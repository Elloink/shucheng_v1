<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:ignore="HardcodedText,ContentDescription,UselessParent" >

    <ImageView
        android:id="@+id/iv_order_list_picture"
        android:layout_width="77dp"
        android:layout_height="110dp"
        android:layout_marginLeft="15dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/small" />

    <LinearLayout
        android:id="@+id/ll_order_list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_order_list_picture"
        android:layout_alignTop="@+id/iv_order_list_picture"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_order_list_picture"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_order_book_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="花千骨"
            android:textColor="#c0c0c0"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_order_book_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="￥28"
                android:textColor="#ff0000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_order_book_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="x 2"
                android:textColor="#c0c0c0"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
	<TextView 
	    android:id="@+id/tv_order_item_price"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@+id/iv_order_list_picture"
	    android:layout_alignBottom="@+id/iv_order_list_picture"
	    android:gravity="center_vertical"
	    android:textColor="#ff0000"
	    android:textSize="14sp"
	    android:text="￥180"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="30dp"
	    />

</RelativeLayout>