<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:ignore="HardcodedText,ContentDescription,UselessParent" >

    <ImageView
        android:id="@+id/iv_cart_list_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/cart_list_delete"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_cart_list_picture"
        android:layout_width="77dp"
        android:layout_height="110dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/iv_cart_list_delete"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/small" />

    <LinearLayout
        android:id="@+id/ll_cart_list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_cart_list_picture"
        android:layout_alignTop="@+id/iv_cart_list_picture"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_cart_list_picture"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_book_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="花千骨"
            android:textColor="#c0c0c0"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_book_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="28￥"
                android:textColor="#ff0000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_book_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="x 2"
                android:textColor="#c0c0c0"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_cart_list_picture"
        android:layout_alignTop="@+id/iv_cart_list_picture"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_background"
           >
            
            <ImageView 
                android:id="@+id/iv_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sub"
                android:contentDescription="@null"
                android:layout_marginLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
               android:layout_centerVertical="true"
                />
            <ImageView 
                android:id="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add"
                android:contentDescription="@null"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                />
            <TextView 
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:textSize="12sp"
                />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>