<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText,UselessParent" >

    <RadioGroup 
        android:id="@+id/rg_navigate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true" 
        android:background="@drawable/bottom"
        
        >
        <RadioButton 
            android:id="@+id/rb_book_store"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="书    城"
            android:textSize="14sp"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/book_store_selector"
            android:drawablePadding="3dp"
            android:checked="true"
            android:textColor="@drawable/text_color_selector"
            android:paddingTop="5dp"
            />
        <RadioButton 
            android:id="@+id/rb_book_car"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="购物车"
            android:textSize="14sp"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/book_car_selector"
            android:drawablePadding="3dp"
            android:textColor="@drawable/text_color_selector"
            android:paddingTop="5dp"
            />
        <RadioButton 
            android:id="@+id/rb_book_my"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="我的T-Book"
            android:textSize="14sp"
            android:button="@null"
            android:gravity="center"
            android:drawableTop="@drawable/book_my_selector"
            android:drawablePadding="3dp"
            android:textColor="@drawable/text_color_selector"
            android:paddingTop="5dp"
            />
        
    </RadioGroup>
   	<android.support.v4.view.ViewPager
   	    android:id="@+id/vp_shucheng"
   	    android:layout_width="match_parent"
   	    android:layout_height="match_parent"
   	    android:layout_above="@+id/rg_navigate"
   	    />

</RelativeLayout>
